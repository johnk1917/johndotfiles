### Settings from original zathurarc ###
set pages-per-row 1
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100
set font "JetBrains Mono Regular 12"

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#a2c0df'
set completion-bg '#0c1018'

# Command line completion group elements
set completion-group-fg '#396492'
set completion-group-bg '#0c1018'

# Current command line completion element
set completion-highlight-fg '#0c1018'
set completion-highlight-bg '#a2c0df'

# Default foreground/background color
set default-bg rgba(12,16,24,0.85)

# Input bar
set inputbar-fg '#a2c0df'
set inputbar-bg '#0c1018'

# Notification
set notification-fg '#a2c0df'
set notification-bg '#0c1018'

# Error notification
set notification-error-fg '#a2c0df'
set notification-error-bg '#355B88'

# Warning notification
set notification-warning-fg '#a2c0df'
set notification-warning-bg '#355B88'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#a2c0df'
set statusbar-bg '#0c1018'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#396492'
set highlight-active-color '#396492'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#a2c0df'

# 'Loading...' text
set render-loading-fg '#a2c0df'
set render-loading-bg '#0c1018'

# Index mode
set index-fg '#a2c0df'
set index-bg '#0c1018'

# Selected element in index mode
set index-active-fg '#0c1018'
set index-active-bg '#a2c0df'