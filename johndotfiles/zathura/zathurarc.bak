### Settings from original zathurarc ###
set pages-per-row 1
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100
set font "JetBrains Mono Regular 10"

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#a2c0df'
set completion-bg '#16161e'

# Command line completion group elements
set completion-group-fg '#396492'
set completion-group-bg '#16161e'

# Current command line completion element
set completion-highlight-fg '#16161e'
set completion-highlight-bg '#16161e'

# Default foreground/background color
set default-bg rgba(12,16,24,0.95)

# Input bar
set inputbar-fg '#a2c0df'
set inputbar-bg '#16161e'

# Notification
set notification-fg '#a2c0df'
set notification-bg '#16161e'

# Error notification
set notification-error-fg '#a2c0df'
set notification-error-bg '#355B88'

# Warning notification
set notification-warning-fg '#a2c0df'
set notification-warning-bg '#355B88'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#a2c0df'
set statusbar-bg '#16161e'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#396492'
set highlight-active-color '#396492'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#a2c0df'

# 'Loading...' text
set render-loading-fg '#a2c0df'
set render-loading-bg '#16161e'

# Index mode
set index-fg '#a2c0df'
set index-bg '#16161e'

# Selected element in index mode
set index-active-fg '#16161e'
set index-active-bg '#16161e'
